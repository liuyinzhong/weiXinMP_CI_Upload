{
  "name": "weixinmp-ci-upload",
  "version": "1.0.0",
  "description": "微信小程序 CI 上传工具",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "tsc -p tsconfig.electron.json && electron dist/electron/main.js",
    "electron:build": "electron-builder",
    "start": "concurrently \"pnpm run dev\" \"sleep 2 && pnpm run electron:dev\""
  },
  "build": {
    "appId": "com.weixinmp.ci.upload",
    "productName": "微信小程序 CI 上传工具",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico",
      "installerHeaderIcon": "public/favicon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "electron",
    "vue",
    "typescript",
    "weixin",
    "ci"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "element-plus": "^2.4.0",
    "iconv-lite": "^0.7.2",
    "vue": "^3.3.0"
  }
}
